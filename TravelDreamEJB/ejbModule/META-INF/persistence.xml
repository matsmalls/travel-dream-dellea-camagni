<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.0" xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd">
	<persistence-unit name="TravelDreamEJB">
		<jta-data-source>jdbc/TravelDreamDB</jta-data-source>
		<class>travelDream.ejb.eaos.Product</class>
		<class>travelDream.ejb.eaos.User</class>
		<class>travelDream.ejb.eaos.Wishlist</class>
		<properties>
			<property name="eclipselink.ddl-generation" value="create-tables"/>
			<property name="URL" value="localhost:3306/TravelDreamDB"></property>
		</properties>
	</persistence-unit>
</persistence>
